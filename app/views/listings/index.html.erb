
<h2>Current Listings</h2>
<% @listings.each do |list| %>
    <h3><%= link_to list.title, list.link %> <%= list.organization %></h3> 
    <p><h4>$<%= list.salary %></h4> <small><% list.categories.each do |cat| %> <%= cat.title %>  <% end %></small></p>
    <p><%= list.description %></p>
    <p>Deadline: <%= list.deadline.strftime('%a %d %b %Y') %></p>
<% end %>