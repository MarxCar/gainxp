<% unless @listings.empty? %>
    <% @listings.each do |list| %>
        <h3><%= link_to list.title, list.link %> <%= list.organization %></h3> 
        <p><h4>$<%= list.salary %></h4> <small><% list.categories.each do |cat| %> <%= link_to(cat.title, category_path(cat)) %>  <% end %></small></p>
        <p><%= list.description %></p>
        <p>Deadline: <%= list.deadline.strftime('%a %d %b %Y') %></p>
    <% end %>
<% else %>
    <h3>No Job Postings Found in <%= @category.title %></h3>
<% end %>